<!DOCTYPE html>
<html lang="en">
<head>
    <title>User Management</title>
</head>
<body>
    <h1>Manage Users</h1>
    <nav>
        <a href="/">Home</a>
        <a href="/reviews">Reviews</a>
        <a href="/orders">Orders</a>
        <a href="/users">Users</a>
        <a href="/products">Products</a>
      </nav>

    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.age %></td>
                <td>
                    <a href="/users/edit/<%= user._id %>">Edit</a> |
                    <a href="/users/delete/<%= user._id %>">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <h2><%= editUser ? "Edit User" : "Add User" %></h2>
    <form method="POST" action="/users">
        <input type="hidden" name="id" value="<%= editUser?._id || "" %>">
        <input type="text" name="username" placeholder="Username" value="<%= editUser?.username || "" %>" required>
        <input type="number" name="age" placeholder="Age" value="<%= editUser?.age || "" %>" required>
        <button type="submit"><%= editUser ? "Update" : "Add" %></button>
    </form>
</body>
</html>
